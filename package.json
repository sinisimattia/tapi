{
	"name": "tapi.js",
	"version": "0.4.4",
	"description": "Consume RESTful APIs as TypeScript objects.",
	"keywords": [
		"API",
		"converter",
		"resolver",
		"tool",
		"TypeScript"
	],
	"author": {
		"name": "Mattia Sinisi",
		"email": "mattia@snisni.it",
		"url": "https://mattia.codes"
	},
	"license": "GPL-3.0-only",
	"bugs": {
		"url": "https://github.com/sinisimattia/tapi/issues"
	},
	"homepage": "https://tapi.js.org",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "ttsc -p tsconfig.build.json",
		"dev": "tsnd --respawn --clear --transpile-only -r tsconfig-paths/register src/examples/demo.ts",
		"test": "jest",
		"lint": "eslint .",
		"clean": "eslint . --fix",
		"prepare": "npm run build",
		"postinstall": "node scripts/thankyou.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sinisimattia/tapi.git"
	},
	"directories": {
		"bin": "dist",
		"test": "tests",
		"lib": "dist",
		"example": "src/examples"
	},
	"files": [
		"dist/**/*",
		"scripts",
		"tests",
		"types"
	],
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"jest": "^27.0.6",
		"ts-jest": "^27.0.5",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.10.1",
		"ttypescript": "^1.5.12",
		"typescript": "^4.7.4",
		"typescript-transform-paths": "^3.3.1"
	},
	"dependencies": {
		"lodash.clonedeep": "^4.5.0"
	}
}
