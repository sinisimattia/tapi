{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}