{
	"compilerOptions": {
		"esModuleInterop": true,
		"strict": true,
		"allowJs": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"src",
		"tests"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}