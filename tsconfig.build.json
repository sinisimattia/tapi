{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"diagnostics": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"rootDir": "src",
		"composite": true,
		"removeComments": true,
		"skipLibCheck": false,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}