{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"esModuleInterop": true,
		"strict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"forceConsistentCasingInFileNames": true,
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			},
			{
				"transform": "typescript-transform-paths",
				"afterDeclarations": true
			}
		]
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}